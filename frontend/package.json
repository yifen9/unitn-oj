{
	"name": "unitn-oj-frontend",
	"private": true,
	"version": "0.0.1",
	"packageManager": "pnpm@8.15.5",
	"type": "module",
	"scripts": {
		"db:reset": "rm -rf .wrangler/state",
		"db:migrate": "wrangler d1 migrations apply DB --local",
		"db:seed": "wrangler d1 execute DB --local --file d1/seed/dev_seed.sql",
		"db:init": "pnpm db:reset && pnpm db:migrate && pnpm db:seed",
		"prepare": "svelte-kit sync",
		"build": "vite build",
		"preview": "vite preview",
		"dev": "pnpm prepare && pnpm build && wrangler pages dev",
		"dev:init": "pnpm db:init && pnpm dev",
		"test": "pnpm prepare && vitest --run"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250904.0",
		"@sveltejs/adapter-cloudflare": "^7.2.3",
		"@sveltejs/kit": "^2.37.1",
		"@sveltejs/vite-plugin-svelte": "^6.1.4",
		"@types/node": "^24.3.1",
		"@tailwindcss/vite": "^4.1.0",
		"svelte": "^5.38.6",
		"svelte-check": "^4.3.1",
		"tailwind-variants": "1.0.0",
		"tailwindcss": "3.4.17",
		"typescript": "^5.9.2",
		"vite": "^7.1.4",
		"vitest": "^3.2.4",
		"wrangler": "^4.34.0"
	},
	"dependencies": {
		"zod": "^4.1.5"
	}
}
