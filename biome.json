{
	"$schema": "https://biomejs.dev/schemas/latest/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"backend/**/*",
			"frontend/**/*",
			"infra/**/*",
			"tests/**/*",
			"deploy/**/*",
			"scripts/**/*",
			"docs/**/*"
		]
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"overrides": [
		{
			"includes": ["frontend/src/app.css"],
			"linter": {
				"rules": {
					"suspicious": { "noUnknownAtRules": "off" },
					"correctness": { "noUnknownProperty": "off" }
				}
			}
		}
	]
}
