{
	"$schema": "https://biomejs.dev/schemas/latest/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"backend/**/*",
			"frontend/tests/**/*",
			"frontend/src/routes/api/**/*",
			"frontend/src/lib/**/*",
			"infra/**/*",
			"tests/**/*",
			"deploy/**/*",
			"scripts/**/*",
			"docs/**/*"
		]
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
